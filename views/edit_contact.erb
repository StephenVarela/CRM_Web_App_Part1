<h2>Edit Contact</h2>

<form action='/contact/<%=@contact.id%>' method='post' class="edit-contact">
  <input type='hidden' name='_method' value='put'>

  <div>
    <label> First Name
      <input type='text' name='first_name' value="<%=@contact.first_name%>">
    </label>
  </div>

  <div>
    <label> Last Name
      <input type='text' name='last_name' value="<%=@contact.last_name%>">
    </label>
  </div>

  <div>
    <label> Email
      <input type='text' name='email' value="<%=@contact.email%>">
    </label>
  </div>

  <div>
    <label> Note
      <input type='text' name='note' value="<%=@contact.note%>">
    </label>
  </div>

  <input type='submit' value='Edit Contact'>

</form>

<a href="/contact/<%=@contact.id%>">View</a>
